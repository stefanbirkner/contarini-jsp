        </license>
    </licenses>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>

    <scm>
        <connection>scm:git:git://github.com/stefanbirkner/contarini-jsp.git</connection>
        <developerConnection>scm:git:git@github.com:stefanbirkner/contarini-jsp.git</developerConnection>
        <url>https://github.com/stefanbirkner/contarini-jsp/</url>
      <tag>HEAD</tag>
